<h2>Account Details for <%= @user.name %></h2>

<%= image_tag @user.image, alt: @user.name, class: 'user_img' %>

<h2>Name</h2>
<p><%= @user.name %></p>

<h2>Email</h2>
<p><%= @user.email %></p>

<h2>Phone Number</h2>
<p><%= @user.phone %></p>

<%= link_to 'Edit Account Details', edit_user_path(@user.id) %>
<%= link_to 'Delete Account', user_path(@user.id), method: 'delete' %>

<h2>Your Bookings</h2>

<% @user.bookings.each do |booking| %>

    <%= cl_image_tag booking.eatery.image, alt: booking.eatery.name, class: 'acc_booking_img' %>
    <p><%= booking.eatery_name %></p>
    <p><%= link_to 'View Booking Details', booking_path(booking.id) %></p>

<% end %>

<%= month_calendar(events: @bookings, attribute: :time) do |date, bookings| %>
  <%= date.day %>

  <% bookings.each do |booking| %>

    <%= link_to booking.eatery_name, booking_path(booking.id) %>
    <%= booking.time %>
    <% end %>

<% end %>


<h2>Your created eateries</h2>

<% @user.eateries.each do |eatery| %>

    <%= link_to image_tag(eatery.image, alt: eatery.name, class: 'admin_eatery_img'), eatery_path(eatery.id) %>
    <p><%= eatery.name %></p>

<% end %>