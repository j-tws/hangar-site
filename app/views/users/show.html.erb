<h2 class="page_header">Account Details for <%= @user.name %></h2>

<div id="user_details_box">
    <%= image_tag @user.image, alt: @user.name, class: 'user_img' %>

    <div id="user_details">
        <h2>Name</h2>
        <p><%= @user.name %></p>

        <h2>Email</h2>
        <p><%= @user.email %></p>

        <h2>Phone Number</h2>
        <p><%= @user.phone %></p>
        <br>
    </div>
</div>
<br>
<br>

    <%= link_to 'Edit Account Details', edit_user_path(@user.id), class: 'sort_tag' %>
    <%= link_to 'Delete Account', user_path(@user.id), method: 'delete', class: 'sort_tag' %>


<h2 class="page_header">Your Calendar Bookings</h2>

<%# <a name="form"></a> %>

<%= month_calendar(events: @bookings, attribute: :time) do |date, bookings| %>
  <%= date.day %>

  <% bookings.each do |booking| %>

    <%= link_to booking.eatery.name, booking_path(booking.id) %>
    <%= booking.time %>
    <% end %>
    <%# <script>
        location.hash = "#form"
    </script> %>
<% end %>

<% if @current_user.admin %>
    <h2>Your created eateries</h2>

    <% @user.eateries.each do |eatery| %>

        <%= link_to image_tag(eatery.image, alt: eatery.name, class: 'admin_eatery_img'), eatery_path(eatery.id) %>
        <p><%= eatery.name %></p>

    <% end %>
<% end %>