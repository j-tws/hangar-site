<h2 class="page_header">Enquiry response</h2>

<div class="query_post">
    <div class="avatar">
        <%= image_tag @enquiry.user.image, class: 'post_img' %>
        <p class='post_name'><%= @enquiry.user.name %></p>
    </div>
    <h3><strong>USER'S QUERY</strong></h3>
    <p><%= @enquiry.query %></p>

    <%= form_with model: @enquiry, local: true do |f| %>

        <h2><%= f.label :response, 'Submit admin response' %><h2>
        <p><%= f.text_area :response, cols: 70 , rows: 8 %></p>

        <%= f.submit %>
    <% end %>

</div>
