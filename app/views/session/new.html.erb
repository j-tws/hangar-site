<div id="login">
<h2>Account Login</h2>

<% if flash[:error] %>

    <p id="login_error"><strong><%= flash[:error] %></strong></p>

<% end %>

<%= form_with url: login_path, local: true do |f| %>

    <div id="email_field">
        <h3><%= f.label :email, 'Email Address' %><h3>
        <p><%= f.text_field :email, placeholder: 'Enter email here' %></p>  
    </div>

    <div id="password_field">
    <h3><%= f.label :password %><h3>
    <p><%= f.password_field :password, placeholder: 'Enter password here' %></p>
    </div>

    <%= f.submit 'Login' %>

<% end %>
</div>
    
