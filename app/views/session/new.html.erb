<h2>Account Login</h2>

<% if flash[:error] %>

    <p><strong><%= flash[:error] %></strong></p>

<% end %>

<%= form_with url: login_path, local: true do |f| %>

    <h2><%= f.label :email, 'Email Adress' %><h2>
    <p><%= f.text_field :email %></p>

    <h2><%= f.label :password %><h2>
    <p><%= f.password_field :password %></p>

    <%= f.submit 'Login' %>

<% end %>
    
